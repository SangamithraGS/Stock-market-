import warnings





df = pd.read_csv(r"C:\Users\Adimin\Downloads\archive\TSLA.csv")
df.head()

df.shape

df.describe()

df.info()

plt.figure(figsize=(15,5))
plt.plot(df['Close'])
plt.title('Tesla Close price.', fontsize=15)
plt.ylabel('Price in dollars.')
plt.show()

df.head()

df[df['Close'] == df['Adj Close']].shape

df = df.drop(['Adj Close'], axis=1)
df.isnull().sum()

features = ['Open', 'High', 'Low', 'Close', 'Volume']
plt.subplots(figsize=(20, 10))
for i, col in enumerate(features):
    plt.subplot(2, 3, i + 1)
    sns.distplot(df[col])
plt.show()

features = ['Open', 'High', 'Low', 'Close', 'Volume']

plt.figure(figsize=(20, 10))

for i, col in enumerate(features):
    plt.subplot(2, 3, i + 1)
    sns.boxplot(data=df, x=col)
    
plt.show()

plt.figure(figsize=(8, 6))
sns.histplot(df['Volume'], kde=True, color='g')
plt.xlabel('Volume')
plt.title('Distribution of Volume')
plt.show()

plt.figure(figsize=(10, 8))
sns.heatmap(df.corr(), annot=True, cmap='coolwarm')
plt.title('Correlation Heatmap')
plt.show()

import matplotlib.pyplot as plt
import seaborn as sns

plt.figure(figsize=(10, 10))

# As our concern is with the highly
# correlated features only so, we will visualize
# our heatmap as per that criteria only.
sns.heatmap(df.corr() > 0.9, annot=True, cbar=False)
plt.show()

df['Date'] = pd.to_datetime(df['Date'])
df['Month'] = df['Date'].dt.month

plt.figure(figsize=(10, 6))
sns.boxplot(data=df, x='Month', y='Close')
plt.title('DJIA Closing Prices by Month')
plt.xlabel('Month')
plt.ylabel('Close Price')
plt.show()

plt.figure(figsize=(8, 6))
sns.histplot(df['Volume'], bins=30)
plt.title('Volume Distribution')
plt.show()

